// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                      Int         @id @default(autoincrement())
  username                String
  email                   String      @unique
  password                String
  phoneNumber             String      @unique
  government              String
  phoneNumberVerifiaction String?
  gender                  Gender
  tokens                  tokens[]
  role                    UserRole    @default(user)
  techncian               Techncian[]
}

model Techncian {
  nationalId              String      @id     @map("_id")
  user_id                 Int         @unique
  fullName                String
  jobTitle                String
  idImage                 String
  user                    Users       @relation(fields: [user_id], references: [id])
}

model tokens {
  id                      Int         @id @default(autoincrement())
  user_id                 Int         @unique
  expiresAt               DateTime
  user                    Users       @relation(fields: [user_id], references: [id])
}

enum UserRole {
  user
  admin
}

enum Gender {
  male
  female
}
